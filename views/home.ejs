<%- include('partials/header') %>

<div class="text-center mt-5">
  <h1 class="display-4">Welcome<% if (name) { %>, <%= name %>!<% } %></h1>
  <p class="lead mb-4">
    This is the home page 
  </p>

  <% if (username) { %>
    <a href="/members" class="btn btn-primary btn-lg me-2">Go to Members Area</a>
    <% if (user_type === "admin") { %>
      <a href="/admin" class="btn btn-warning btn-lg me-2">Admin Area</a>
    <% } %>
    <a href="/logout" class="btn btn-outline-danger btn-lg">Logout</a>
  <% } else { %>
    <a href="/login" class="btn btn-success btn-lg me-2">Login</a>
    <a href="/signup" class="btn btn-outline-primary btn-lg">Sign Up</a>
  <% } %>
</div>

<%- include('partials/footer') %>
